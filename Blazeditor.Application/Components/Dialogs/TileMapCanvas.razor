@using Blazeditor.Application.Models
@inject IJSRuntime JS
@inject DefinitionManager Definition

<div>
    <h3>Area Map</h3>
    <div id="mapEditorButtons" class="btn-toolbar">
        <div id="toolButtons" class="btn-group me-2">
            <button class='btn btn-outline-secondary @(selectedTool == "select" ? "active" : "")' @onclick='() => SelectTool("paint")'>
                <i class="bi bi-cursor"></i>
            </button>
            <button class='btn btn-outline-secondary @(selectedTool == "paint" ? "active" : "")' @onclick='() => SelectTool("paint")'>
                <i class="bi bi-brush"></i>
            </button>
            <button class='btn btn-outline-secondary @(selectedTool == "fill" ? "active" : "")' @onclick='() => SelectTool("fill")'>
                <i class="bi bi-paint-bucket"></i>
            </button>
            <button class='btn btn-outline-secondary @(selectedTool == "eraser" ? "active" : "")' @onclick='() => SelectTool("eraser")'>
                <i class="bi bi-eraser"></i>
            </button>
        </div>
        <div id="actionButtons" class="btn-group me-2">
            <button class="btn btn-outline-secondary" @onclick="@ClearTileMaps">
                <i class="bi bi-trash"></i>
            </button>
        </div>
        <div id="viewPrefs" class="btn-group me-2">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" checked id="viewGridChkBx" @onchange="@ToggleViewGrid">
                <label class="form-check-label" for="viewGridChkBx" >Show Grid</label>
            </div>
        </div>
    </div>
    <canvas @ref="canvasRef" width="1024" height="1024" style="border:1px solid #ccc; background:#f8f9fa; width:100%;"></canvas>
</div>

