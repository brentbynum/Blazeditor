@using Blazeditor.Application.Models
@using Blazeditor.Application.Services
@inject DefinitionManager Definition

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Blazeditor.Application</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        @foreach (var area in Definition.GetAreas())
        {
            <div class="nav-item px-3 mb-2">
                <NavLink class="nav-link" href=@($"/area/{area.Id}")>
                    <span class="fw-medium fs-5">@area.Name</span>
                    @if (!string.IsNullOrWhiteSpace(area.Description))
                    {
                        <div class="ms-3 fst-italic text-muted small">@area.Description</div>
                    }
                </NavLink>
            </div>
        }
    </nav>
</div>
