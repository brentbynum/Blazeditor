@using Blazeditor.App.Models
@using Blazeditor.App.Services
@inject DefinitionManager Definition

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Blazeditor.App</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        <NavLink class="nav-link" href="">
            <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span>Home
        </NavLink>
        @foreach (var area in Definition.GetAreas())
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href=@($"/area/{area.Id}")>
                    <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> @area.Name (@area.Id)
                </NavLink>
            </div>
        }
    </nav>
</div>